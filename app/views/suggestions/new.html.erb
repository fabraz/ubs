<!-- Contact Form -->
<!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
<div class="row">
    <div class="col-md-8">
        <h3>Send us a Suggestion</h3>

        <%= form_for @suggestion, html: { class: "form-horizontal" } do |f| %>
        <!-- Name -->
        <div class="control-group form-group">
            <div class="controls">
                <%= f.label :who_suggests , class: "control-label" %><br />
                <%= f.text_field :who_suggests, autofocus: true, class: "form-control", id: "name" %>
            </div>
        </div>
        <!-- Email -->
        <div class="control-group form-group">
            <div class="controls">
                <%= f.label :respond_email , class: "control-label" %><br />
                <%= f.email_field :respond_email, class: "form-control", id: "email" %>
            </div>
        </div>

        <!-- Message -->
        <div class="control-group form-group">
            <div class="controls">
                <%= f.label :suggestion_text , class: "control-label" %><br />
                <%= f.text_area :suggestion_text , class: "form-control", id: "message", rows: "8"%><br />
            </div>
        </div>
        <div id="success"></div>

        <!-- Button -->
        <div class="controls">
            <%= f.submit "Send Message" , class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>
