<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<h1>Localizer a unidade de saúde mais próxima</h1>

<div style='width: 800px;'>
  <div id="multi_markers" style='width: 1000px; height: 400px;'></div>
</div>
<table>
  <thead>
    <th>Name</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @basic_units.each do |basic_unit| %>
      <tr>
        <td><%= basic_unit.estab_name %></td>
        <td><%= link_to 'Perfil', basic_unit_path(basic_unit) %></td>
      </tr>
    <%end%>
  </tbody>
</table>


<script type="text/javascript">

  handler = Gmaps.build('Google');
  handler.buildMap(
    {
      provider: {
        disableDefaultUI: false,
        
        // here you can pass other Google Maps API options here
      },
      internal: {
        id: 'multi_markers'
      }
    },
    function() {

      // Add ubs markers to the map
      markers = handler.addMarkers(<%=raw @hash.to_json %>);


      // Find the user location
      if(navigator.geolocation){
        navigator.geolocation.getCurrentPosition(displayOnMap);
      }

      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      // handler.getMap().setZoom(9);
    }
  );

  // Display the user location
  function displayOnMap(position){
    $.ajax({
         type: 'GET',
         url: "/locating_ubs",
         data: 'lat=' + position.coords.latitude + '&lng=' + position.coords.longitude,
         dataType: "html",
         success: function(result) {
              // process the results from the controller action
          }
     });
    
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude
    });
    handler.map.centerOn(marker);
  };

</script>