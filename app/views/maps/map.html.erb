
<h1>Localizer a unidade de saúde mais próxima</h1>


<h3>Por favor, selecione uma cidade: </h3>

<div class="city">
  <%= form_tag locating_ubs_path, :method => 'get' do %>
    <%=select_tag :city, options_for_select(@cities) %>
    <%= submit_tag 'search'%>
  <%end%>
<div>

<br>
<br>

<div class="map" style='width: 800px;'>
  <div id="map" style='width: 1000px; height: 400px;'></div>
</div>


<script type="text/javascript">

  // Calculate the route 
  var directionsDisplay = new google.maps.DirectionsRenderer();
  var directionsService = new google.maps.DirectionsService();

  function calcRoute() {
    var origin      = new google.maps.LatLng(41.850033, -87.6500523);
    var destination = new google.maps.LatLng(42.850033, -85.6500523);
    var request = {
        origin:      origin,
        destination: destination,
        travelMode:  google.maps.TravelMode.DRIVING
    };
    directionsService.route(request, function(response, status) {
      if (status == google.maps.DirectionsStatus.OK) {
        directionsDisplay.setDirections(response);
      }
    });
  }

  calcRoute();

  handler = Gmaps.build('Google');
  handler.buildMap(
    {
      provider: {
        disableDefaultUI: false,
        
        // here you can pass other Google Maps API options here
      },
      internal: {
        id: 'map'
      }
    },
    function() {

      // Add ubs markers to the map
      markers = handler.addMarkers(<%=raw @hash.to_json %>);

      // Display the route
      directionsDisplay.setMap(handler.getMap());

      // Find the user location
      if(navigator.geolocation){
        navigator.geolocation.getCurrentPosition(displayOnMap);
      }

      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      // handler.getMap().setZoom(9);
    }
  );

  // Display the user location
  function displayOnMap(position){
    $.post('/locating_ubs', { lat: position.coords.latitude, lng: position.coords.longitude});
    
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude
    });
    handler.map.centerOn(marker);
  };

</script>