<div class="row">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div id="legend">
      <legend class="">Register</legend>
    </div>

    <div class="control-group">
      <!-- Username -->
      <div class="field">
        <%= f.label :user_name , class: "control-label" %><br/>
        <%= f.text_field :user_name, autofocus: true %>
        <p class="help-block">Username can contain any letters or numbers, without spaces</p>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <div class="controls">
        <%= f.label :email , class: "control-label" %><br />
        <%= f.email_field :email%>
        <p class="help-block">Please provide your E-mail</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Password-->
      <div class="controls">
        <%= f.label :password , class: "control-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <p class="help-block">Password should be at least 8 characters</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Confirm Password -->
      <div class="controls">
        <%= f.label :password_confirmation , class: "control-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <p class="help-block">Please confirm password</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <%= f.submit "Sign up" , class: "btn btn-success" %>
      </div>
    </div>
    
  <% end %>
</div>